<!DOCTYPE html>
<html>
    <head>
        <title><%= title%></title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel='stylesheet' href='/stylesheets/style.css'/>
        <link rel='stylesheet' href='/stylesheets/bootstrap.css'/>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="/javascripts/bootstrap.js"></script>
    </head>
    <body>
      <div class="container-fluid">
      <% include templates/header.ejs %>
        <h1>This is a test page</h1>
        <!--<p>Welcome to <%= title %></p>-->

        <% for(var i=0; i<4;i++){%>
          <div class="row">
            <div class="col-xs-12">
        <span>Device <%= i%>:</span>
        <label class="switch">
          <input class="checkbox<%=i%>" type="checkbox">
         <div class="slider round">
         </div>
      </label>
      <p> device<%=i%> status: <span class="result<%=i%>"> <span id='return'></span>
        <script>
          $('.checkbox<%=i%>').change(function(){
            if(this.checked){
              $('.result<%=i%>').text('checked');
              $.post('/',{status:'ON',device:<%=i%>}/*,function(result){$('#return').html(result)}*/);
            }else{
              $('.result<%=i%>').text('unchecked');
              $.post('/',{status:'OFF',device:<%=i%>});
            }
          });
        </script>

      </span></p>
      </div>
    </div>
      <%}%>
  </div>
    </body>
</html>
